<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/bug_icon"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sorry for inconvience "/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ooooops.. I crashed, but don't worry you can send error report to my developer to help him fix the issue."/>

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/btnCrashRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close App"
            android:typeface="sans"
            android:textColor="@color/crashButtonTextColor"
            android:background="@drawable/crash_button_back"
            android:textAllCaps="false"/>

    </LinearLayout>
</RelativeLayout>